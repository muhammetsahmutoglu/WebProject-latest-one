
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/SysAdmin/Views/Shared/_AdminLayout.cshtml";
}
@model WebProject.UI.Areas.SysAdmin.Models.DTO.VideoCategoryDTO
<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <h4 class="page-title">Video Kategorisi Güncelleme</h4>
    </div>
</div>
<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <form action="/SysAdmin/VideoCategory/Update" role="form" enctype="multipart/form-data" method="post">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Kategori Adı <span class="text-danger">*</span></label>
                        <input name="Name" required="" value="@Model.Name" class="form-control" type="text">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Açıklama</label>
                        <input name="Explanation" value="@Model.Explanation" required="" class="form-control" type="text">
                    </div>
                </div>
            </div>
            <div class="m-t-20 text-center">
                <input name="ID" value="@Model.ID" style="visibility:hidden" />
                <button class="btn btn-primary submit-btn">Kaydet</button>
            </div>
        </form>
    </div>
</div>

