
@{
    ViewBag.Title = "ListByCategory";
    Layout = "~/Areas/SysAdmin/Views/Shared/_AdminLayout.cshtml";
}
@model WebProject.UI.Areas.SysAdmin.Models.VM.PhotoVM
    <div class="content">
        <div class="row">
            <div class="col-sm-12">
                <h4 class="page-title">@Model.CategoryName kategorisindeki fotoğraflar</h4>
            </div>
        </div>
        <div id="lightgallery" class="row">
            @foreach (var item in Model.Photos)
            {
                <div class="col-xl-3 col-lg-3 col-md-6 col-sm-6 m-b-20">
                    @{
                        var base64 = Convert.ToBase64String(item.Url);
                        var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);

                        <a href="/SysAdmin/Photo/Show/@item.ID"><img class="img-thumbnail" src="@imgsrc" alt=""></a>
                    }
                    <p>@item.Name</p>
                </div>
            }

        </div>
    </div>

