
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/SysAdmin/Views/Shared/_AdminLayout.cshtml";
}
@model List<WebProject.Data.ORM.Entity.Catalog>
<div class="row">
    <div class="col-sm-4 col-3">
        <h4 class="page-title">Kataloglar</h4>
    </div>
    <div class="col-sm-8 col-9 text-right m-b-20">
        <a href="/SysAdmin/Catalog/Add" class="btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Katalog Ekle</a>
    </div>
</div>
@foreach (var item in Model)
{
    <div class="row doctor-grid">
        <div class="col-md-4 col-sm-4  col-lg-3">
            <div class="profile-widget">
                <div class="doctor-img">
                    @if (item.ImageUrl != null)
                    {
                        var base64 = Convert.ToBase64String(item.ImageUrl);
                        var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                        <img src="@imgsrc" style="max-height:120px;max-width:120px;" />
                    }
                    else
                    {
                        <img src="~/Content/img/user.jpg" style="max-height:150px;max-width:150px;" />
                    }
                </div>
                <div class="dropdown profile-action">
                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <input name="ID" value="@item.ID" style="visibility:hidden" />
                        <a class="dropdown-item" href="/SysAdmin/Catalog/Update/@item.ID"><i class="fa fa-pencil m-r-5"></i> Düzenle</a>
                        <a class="dropdown-item" href="/SysAdmin/Catalog/Delete/@item.ID"><i class="fa fa-trash-o m-r-5"></i> Sil</a>
                    </div>
                </div>
                <h4 class="doctor-name text-ellipsis"><a href="/SysAdmin/Catalog/Show/@item.ID">@item.Name</a></h4>
                <div class="user-country">
                    @if (item.Explanation.Length > 30)
                    {
                        <i class="fa fa-map-marker"></i> @item.Explanation.Substring(1,30) <i class="fa fa-map-marker" >...</i>
                    }
                    else
                    {
                        <i class="fa fa-map-marker"></i> @item.Explanation
                    }
                </div>
            </div>
        </div>
    </div>
}
