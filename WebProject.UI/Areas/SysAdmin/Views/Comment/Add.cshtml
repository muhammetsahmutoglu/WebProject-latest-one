
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/SysAdmin/Views/Shared/_AdminLayout.cshtml";
}

    <div class="widget new-comment clearfix">
        <h3>Müşteri Yorumu Ekleme</h3>
        <form action="/SysAdmin/Comment/Add" role="form" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col-sm-8">
                    <div class="form-group row">
                        <label class="col-form-label col-md-2">Profil resmi</label>
                        <div class="col-md-10">
                            <input name="image" id="image" class="form-control" type="file">
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Müşteri Adı <span class="text-red">*</span></label>
                        <input type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Firma Adı <span class="text-red">*</span></label>
                        <input type="text" name="CompanyName" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Yetki <span class="text-red">*</span></label>
                        <input type="text" name="Authority" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Email <span class="text-red">*</span></label>
                        <input name="Email" type="email" class="form-control">
                    </div>
                    <div class="form-group">
                        <label>Müşteri Yorumu</label>
                        <textarea name="CommentContent" rows="4" class="form-control"></textarea>
                    </div>
                    <div class="comment-submit">
                        <input type="submit" value="Ekle" class="btn">
                    </div>
                </div>
            </div>
        </form>
    </div>

