
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/SysAdmin/Views/Shared/_AdminLayout.cshtml";
}
@model WebProject.Data.ORM.Entity.User
<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <h4 class="page-title">Kullanıcı Ekleme</h4>
    </div>
</div>
<div class="row">
    <div class="col-lg-8 offset-lg-2">
        <form role="form" enctype="multipart/form-data" method="post" action="/SysAdmin/User/Update">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="FirstName">İsim <span class="text-danger">*</span></label>
                        <input value="@Model.FirstName" name="FirstName" placeholder="İsim" required="" class="form-control" type="text">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Soy İsim</label>
                        <input value="@Model.LastName" name="LastName" placeholder="Soy İsim" required="" class="form-control" type="text">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="UserName">Kullanıcı Adı<span class="text-danger">*</span></label>
                        <input value="@Model.UserName" name="UserName" placeholder="Kullanıcı Adı" required="" class="form-control" type="text">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="Email">Email <span class="text-danger">*</span></label>
                        <input value="@Model.Email" name="Email" placeholder="Email" required="" class="form-control" type="email">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="Password">Şifre</label>
                        <input value="@Model.Password" name="Password" placeholder="Şifre" required="" class="form-control" type="password">
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="IsAdmin">Yetki</label>
                        <select name="IsAdmin" class="form-control">
                            <option>-- Seç --</option>
                            <option>Admin</option>
                            <option>Uye</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="m-t-20 text-center">
                <input value="@Model.ID" name="ID" style="visibility:hidden" required="" class="form-control" type="text">
                <button class="btn btn-primary submit-btn">Kaydet</button>
            </div>
        </form>
    </div>
</div>

