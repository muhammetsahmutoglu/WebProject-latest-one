
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/SysAdmin/Views/Shared/_AdminLayout.cshtml";
}
@model WebProject.UI.Areas.SysAdmin.Models.DTO.UserDTO
    
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <h4 class="page-title">Kullanıcı Ekleme</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <form role="form" enctype="multipart/form-data" method="post" action="/SysAdmin/User/Add">                    
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-control-file">
                                <label>Kullanıcı Resmi <span class="text-danger">*</span></label>
                                <input id="image" name="image"  class="form-control" type="file">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="FirstName">İsim <span class="text-danger">*</span></label>
                                <input name="FirstName" placeholder="İsim" required="" class="form-control" type="text">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Soy İsim</label>
                                <input name="LastName" placeholder="Soy İsim" required="" class="form-control" type="text">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="UserName">Kullanıcı Adı<span class="text-danger">*</span></label>
                                <input name="UserName" placeholder="Kullanıcı Adı" required="" class="form-control" type="text">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="Email">Email <span class="text-danger">*</span></label>
                                <input name="Email" placeholder="Email" required="" class="form-control" type="email">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="Password">Şifre</label>
                                <input name="Password" placeholder="Şifre" required="" class="form-control" type="password">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="IsAdmin">Yetki</label>
                                <select name="IsAdmin" class="form-control">
                                    <option>-- Seç --</option>
                                    <option>Admin</option>
                                    <option>Uye</option>
                                </select>
                            </div>
                        </div>



                    </div>
                    <div class="m-t-20 text-center">
                        <button class="btn btn-primary submit-btn">Ekle</button>
                    </div>
                </form>
            </div>
        </div>
    

