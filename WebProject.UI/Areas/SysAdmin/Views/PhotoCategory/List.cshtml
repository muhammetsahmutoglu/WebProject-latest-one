
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/SysAdmin/Views/Shared/_AdminLayout.cshtml";
}
@model List<WebProject.Data.ORM.Entity.PhotoCategory>
<div class="row">
    <div class="col-sm-4 col-3">
        <h4 class="page-title">Fotoğraf Kategorileri</h4>
    </div>
    <div class="col-sm-8 col-9 text-right m-b-20">
        <a href="/SysAdmin/PhotoCategory/Add" class="btn btn-primary btn-rounded float-right"><i class="fa fa-plus"></i> Kategori Ekle</a>
    </div>
</div>
@foreach (var item in Model)
{
    <div class="row doctor-grid">
        <div class="col-md-4 col-sm-4  col-lg-3">
            <div class="profile-widget">                
                <div class="dropdown profile-action">
                    <a href="#" class="action-icon dropdown-toggle" data-toggle="dropdown" aria-expanded="false"><i class="fa fa-ellipsis-v"></i></a>
                    <div class="dropdown-menu dropdown-menu-right">
                        <input name="ID" value="@item.ID" style="visibility:hidden" />
                        <a class="dropdown-item" href="/SysAdmin/PhotoCategory/Update/@item.ID"><i class="fa fa-pencil m-r-5"></i> Düzenle</a>
                        <a class="dropdown-item" href="/SysAdmin/PhotoCategory/Delete/@item.ID"><i class="fa fa-trash-o m-r-5"></i> Sil</a>
                    </div>
                </div>
                <h4 class="doctor-name text-ellipsis"><a href="/SysAdmin/PhotoCategory/Show/@item.ID">@item.Name</a></h4>
                <div class="user-country">
                    @if (item.Explanation.Length > 30)
                    {
                        <i class="fa fa-map-marker"></i> @item.Explanation.Substring(1, 30) <i class="fa fa-map-marker">...</i>
                    }
                    else
                    {
                        <i class="fa fa-map-marker"></i> @item.Explanation
                    }
                </div>
            </div>
        </div>
    </div>
}

